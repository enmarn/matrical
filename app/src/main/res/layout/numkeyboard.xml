<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/NUM_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="7"
            android:onClick="onClick"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/NUM_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:onClick="onClick"
            android:text="8"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/NUM_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="9"
            android:onClick="onClick"
            android:background="@drawable/button_select"/>
        <Button
            android:id="@+id/OP_MOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="%"
            android:onClick="onClick"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/DEL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/button_select"
            android:onClick="onClick"
            android:text="del" />

    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/NUM_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:onClick="onClick"
            android:text="4"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/NUM_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:onClick="onClick"
            android:text="5"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/NUM_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_weight="0.2"
            android:text="6"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/OP_MUL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/button_select"
            android:onClick="onClick"
            android:text="*" />

        <Button
            android:id="@+id/OP_DIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/button_select"
            android:onClick="onClick"
            android:text="/" />

    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/NUM_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:onClick="onClick"
            android:text="1"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/NUM_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_weight="0.2"
            android:text="2"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/NUM_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_weight="0.2"
            android:text="3"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/OP_AND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/button_select"
            android:onClick="onClick"
            android:text="+" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="-"
            android:onClick="onClick"
            android:id="@+id/OP_DEC"
            android:background="@drawable/button_select"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/NUM_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="0"
            android:onClick="onClick"
            android:background="@drawable/button_select"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="."
            android:id="@+id/OP_DOT"
            android:onClick="onClick"
            android:background="@drawable/button_select"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="X10"
            android:onClick="onClick"
            android:id="@+id/OP_EXP"
            android:background="@drawable/button_select"/>

        <Button
            android:id="@+id/OP_ANS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/button_select"
            android:onClick="onClick"
            android:text="Ans" />
        <Button
            android:id="@+id/EXE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/button_select"
            android:onClick="onClick"
            android:text="EXE" />
    </TableRow>

</TableLayout>
